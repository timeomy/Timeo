{
  "extends": "@timeo/config-ts/tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./app/*", "./components/*", "./lib/*"],
      "@timeo/api": ["../../packages/api"],
      "@timeo/ui": ["../../packages/ui/src"],
      "@timeo/ui/web": ["../../packages/ui/src/web"],
      "@timeo/shared": ["../../packages/shared/src"],
      "@timeo/auth": ["../../packages/auth/src"],
      "@timeo/auth/web": ["../../packages/auth/src/web"],
      "@timeo/cms": ["../../packages/cms/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
