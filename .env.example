# ─── PostgreSQL ─────────────────────────────────────────────────────────────
POSTGRES_USER=timeo
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=timeo
DATABASE_URL=postgresql://timeo:your-secure-postgres-password@localhost:5432/timeo

# ─── Redis ───────────────────────────────────────────────────────────────────
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@localhost:6379

# ─── API Server ──────────────────────────────────────────────────────────────
API_URL=https://api.timeo.my
JWT_SECRET=your-jwt-secret-min-32-chars
PORT=4000

# ─── Auth ────────────────────────────────────────────────────────────────────
BETTER_AUTH_SECRET=your-better-auth-secret-min-32-chars
SITE_URL=https://timeo.my

# ─── Frontend ────────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=https://api.timeo.my
EXPO_PUBLIC_API_URL=https://api.timeo.my
EXPO_PUBLIC_APP_SCHEME=timeo

# ─── Stripe ──────────────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...

# ─── Revenue Monster ─────────────────────────────────────────────────────────
REVENUE_MONSTER_CLIENT_ID=
REVENUE_MONSTER_CLIENT_SECRET=
REVENUE_MONSTER_PRIVATE_KEY_PATH=/app/keys/rm-private.pem
REVENUE_MONSTER_ENVIRONMENT=production  # sandbox | production

# ─── Email (Resend) ──────────────────────────────────────────────────────────
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@timeo.my

# ─── Notifications (Novu) ────────────────────────────────────────────────────
NOVU_API_KEY=

# ─── Analytics (PostHog) ─────────────────────────────────────────────────────
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ─── Malaysia e-Invoice (MyInvois / LHDN) ────────────────────────────────────
MYINVOIS_CLIENT_ID=
MYINVOIS_CLIENT_SECRET=
MYINVOIS_ENVIRONMENT=production  # sandbox | production

# ─── Node ────────────────────────────────────────────────────────────────────
NODE_ENV=production
